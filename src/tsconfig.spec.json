{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts"
  ],
  "exclude": [
    "main.ts"
  ],
  "paths": {
    "@app/*": [
      "app/*"
    ],
    "@env/*": [
      "environments/*"
    ]
  }
}
